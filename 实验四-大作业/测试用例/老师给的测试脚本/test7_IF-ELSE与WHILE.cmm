int a = 4;
int j = a;
while(a != 0)
{
	while(j != 0)
	{
		if(j/2 != 1)
			write("",j);
		j = j-1;	
	}
	if( a < 2)
	{
		write("",a);
	}
	else
		write("",a+3);
	a = a -1;
}

